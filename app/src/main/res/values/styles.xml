<?xml version="1.0" encoding="utf-8"?>
<resources>





    <style name="home_menu_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/newBlue</item>

    </style>

    <style name="home_menu_imageview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>

    </style>

    <style name="ThemeOverlay.MyPopupTheme" parent="Theme.AppCompat.Light.NoActionBar">
<!--        Widget.AppCompat.PopupMenu-->
    </style>

    <style name="Style.PopupMenu" parent="Theme.Sudoku">
        <item name="android:textColor">@android:color/black</item>
<!--        <item name="android:itemBackground">@drawable/background_btn</item>-->
        <item name="android:popupBackground">@color/black</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_gravity">center</item>
<!--        <item name="popupMenuBackground">@drawable/background_btn</item>-->
    </style>

    <style name="home_button">
        <item name="android:textColor">@color/newWhite</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>


<!--    GAME ACTIVITY -->
    <style name="game_bar_button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:padding">20dp</item>

    </style>

    <style name="game_stats_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="game_table_button">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
<!--        <item name="android:text"></item>-->
        <item name="android:background">@drawable/border</item>
        <item name="android:onClick">selectField</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/littleBlack</item>
        <item name="layout_rowWeight">1</item>
        <item name="layout_columnWeight">1</item>


    </style>

    <style name="game_table_square">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/border_table</item>
        <item name="android:padding">1dp</item>
        <item name="columnCount">3</item>
        <item name="rowCount">3</item>
        <item name="layout_columnWeight">0</item>
        <item name="layout_rowWeight">0</item>

    </style>

    <style name="game_modify_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="game_modify_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">16sp</item>

    </style>


    <style name="game_numbers_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/granat</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">48sp</item>
        <item name="android:onClick">selectNumber</item>
<!--        <item name="android:minWidth">48dp</item>-->

    </style>



</resources>